<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/analysis"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/analysis_button"
        app:layout_constraintEnd_toStartOf="@id/roll"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/roll"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/roll_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/land"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/land"
        app:layout_constraintStart_toEndOf="@id/roll"
        app:layout_constraintEnd_toStartOf="@id/sea"/>

    <Button
        android:id="@+id/sea"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/sea"
        app:layout_constraintStart_toEndOf="@id/land"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
